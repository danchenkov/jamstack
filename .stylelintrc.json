{
	"extends": "stylelint-config-standard-scss",
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"extends",
					"include",
					"use"
				]
			}
		],
		"selector-class-pattern": [
			"^([a-z][a-z0-9]*)(-{1,2}[a-z0-9]+)*$",
			{
				"message": "Expected class selector to be kebab-case"
			}
		],
		"block-no-empty": null,
		"indentation": 4,
		"unit-allowed-list": [
			"%",
			"ch",
			"ddpx",
			"deg",
			"fr",
			"em",
			"ms",
			"px",
			"rem",
			"s",
			"vw"
		]
	}
}
